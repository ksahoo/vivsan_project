<div class="container">
	<div class="row">
		<div class="col-lg-10 simple_form form-horizontal">
			<%= form_for :user, :url => users_admin_index_path, :method => 'get' do |user| %>
				<h1>Member Login</h1>
				<legend>
					<h4>If you are not a member yet please become a member 
					<%= link_to "here",sign_up_users_path %> to Sign In</h4>
				</legend>

				<% if flash[:error] %>
					<font color = "red" size = "4">
						<%= flash[:error].html_safe %>
					</font>	
				<% end %>

				<div class="form-group row">
  				 <%= user.label :Email, class: "string optional control-label control-label col-md-2 col-lg-2" %>
  				<div class="col-md-4 col-lg-4">	
  					<%= user.text_field :email, class: "form-control" %>
  				</div>
  			</div>

		    <div class="form-group row">
  				 <%= user.label :Password, class: "string optional control-label control-label col-md-2 col-lg-2" %>
  				<div class="col-md-4 col-lg-4">	
  					<%= user.password_field :password, class: "form-control" %>
  				</div>
  			</div>

  			<div class="form-group col-md-6 col-lg-6 row">
  				<%= user.submit "SignIn", class: "btn btn-primary", style: "margin-left: 20%"%>
  			</div>
			<%end%>
		</div>			
	</div>
</div>

