
<div class="row">
	<div class="col-md-10"> 
		<div class="row">											
			
		</div>
	</div>
	<div class="col-md-2 col-lg-2">
		<%= link_to("ADD USER",{:action => 'new'}, :class => 'btn btn-primary')%>
	</div>
	<div class="col-md-12">
		<center>
			<table class="table table-striped table-hover ">	
				<thead>
					<th>First Name</th>
					<th>Last Name</th>
					<th>email</th>
					<th>Institution</th>
					<th>Role</th>
					<th></th>
					<th></th>
					<th></th>
			  </th>
				
				<% @users.each do |user|%>
					<tr>
						<td><%= user.firstname%></td>
						<td><%= user.lastname%></td>
						<td><%= user.email%></td>
						<td><%= user.institution%></td>
						<td><%= user.role%></td>
						<td><%= link_to "view",users_admin_path(user.id)%></td>
						<td><%= link_to "edit",edit_users_admin_path(user.id)%></td>
						<td><%= link_to "delete",users_admin_path(user.id), :method => 'delete'%></td>
					</tr>
				<%end%>
			</table>
		</center>
	</div>
</div>
