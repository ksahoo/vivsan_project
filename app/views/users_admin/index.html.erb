
<div class="row">
	<div class="col-md-10"> 
		<div class="row">											
			
		</div>
	</div>
	<div class="col-md-2 col-lg-2">
		<%= link_to("ADD USER",{:action => 'new'}, :class => 'btn btn-primary')%>
	</div>
	<div class="col-md-12">
		<center>
			<table class="table table-striped table-hover ">	
				<th>
					<tr style = "background-color: #def">
					<td>First Name</td>
					<td>Last Name</td>
					<td>email</td>
					<td>Institution</td>
					<td>Role</td>
					<td></td>
					<td></td>
					<td></td>
					</tr>
			  </th>
				
				<% @users.each do |t|%>
					<tr>
						<td><%= t.firstname%></td>
						<td><%= t.lastname%></td>
						<td><%= t.email%></td>
						<td><%= t.institution%></td>
						<td><%= t.role%></td>
						<td><%= link_to "view",users_admin_path(t.id)%></td>
						<td><%= link_to "edit",edit_users_admin_path(t.id)%></td>
						<td><%= link_to "delete",users_admin_path(t.id), :method => 'delete'%></td>
					</tr>
				<%end%>
			</table>
		</center>
	</div>
</div>
