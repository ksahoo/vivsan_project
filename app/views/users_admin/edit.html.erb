
<div class="container" style = "margin-top: 50px">
	<div class="well">
		<h1>
  	Edit your data here...
		</h1>
		<div>
			<%= form_for :user, :url => users_admin_path(@user.id), method: 'patch' do |f|%>
				<center>
					<table class="table table-striped table-hover">	
							<tr>
								<th>First Name :</th>
								<td><%= f.text_field(:firstname)%></td>
							</tr>
							<tr>
								<th>Last Name :</th>
								<td><%= f.text_field(:lastname)%></td>
							</tr>
							<tr>
								<th>email :</th>
								<td><%= f.email_field(:email)%></td>
							</tr>
							<tr>
								<th>Institution :</th>
								<td><%= f.text_field(:institution)%></td>
							</tr>
							<tr>
								<th>Role :</th>
								<td><%= f.text_field(:role)%></td>
							</tr>
							<tr>
								<%= f.submit("Save", :class => 'btn btn-primary')%>
							</tr>
					</table>
				</center>
			<% end %>
			<%= link_to("Back", users_admin_index_path, :class => 'btn btn-primary')%>
		</div>
	</div>
</div>      

